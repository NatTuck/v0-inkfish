<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Footer</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for course <- @courses do %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.start_date %></td>
      <td><%= course.footer %></td>

      <td>
        <%= link "Show", to: Routes.admin_course_path(@conn, :show, course) %>
        <%= link "Edit", to: Routes.admin_course_path(@conn, :edit, course) %>
        <%= link "Delete", to: Routes.admin_course_path(@conn, :delete, course), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Course", to: Routes.admin_course_path(@conn, :new) %></span>
